{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/scripts",
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
