{
  "name": "snake-game",
  "version": "1.0.0",
  "description": "Snake is a game where the player maneuvers a growing line that becomes a primary obstacle to itself",
  "repository": "git@github.com:mort-gh/snake.git",
  "author": "Roman Hnatiuk <roman.hnatiuk@openvpn.net>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack serve",
    "build:clean": "rimraf build",
    "build:copy": "copyfiles --up 1 --all \"static/**/*\" build",
    "build:ci": "webpack",
    "build": "npm-run-all -p build:clean build:copy build:ci",
    "format": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
